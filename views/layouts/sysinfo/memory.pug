extends ../../layouts/layout.pug


block link
  -var selected = '/admin/memory';

block content

  .main-content
    .container-fluid
      .panel.panel-headline
        .panel-heading
          h3.panel-title
            b Memory Statistics
        .panel-body
          .row
            .col-md-12
              .row
                .col-md-9
                  h4.heading
                    b Overall Usage
                  #memory-usage-chart.ct-chart
                .col-md-3
                  .weekly-summary.text-right.bottom
                    span#memPercent.number 40% (398.8 MB)
                    span.info-label In use
                  .weekly-summary.text-right.bottom
                    span#memUsage.number 997 MB
                    span.info-label Total
                  .weekly-summary.text-right.bottom
                    span#swapUsage.number 20 MB
                    span.info-label Swap in used
                  .weekly-summary.text-right.bottom
                    span#swapTotal.number 10 GB
                    span.info-label Swap total
              .row.container-fluid
                .col-md-3
                  h4.heading
                    b Statistic
                  ul.list-unstyled.list-justify
                    li
                    | Total 
                    span #{mem.total}
                  li
                    | Free 
                    span #{mem.free}
                  li
                    | In used 
                    span #{mem.used}
                  li
                    | Active 
                    span #{mem.active}
                  li
                    | Available 
                    span #{mem.available}
                  li
                    | Buffer cache 
                    span #{mem.buffcache}
                  li
                    | Swap total 
                    span #{mem.swaptotal}
                  li
                    | Swap use 
                    span #{mem.swapuse}
                  li
                    | Swap free 
                    span #{mem.swapfree}

block scripts

  script.
      $(function () {
          var memory_usage, options;

          memory_usage = {
              series: [
                  [23, 29, 24, 40, 25, 24, 35, 12, 35]
              ]
          };

          options = {
              height: 300,
              showArea: true,
              showLine: false,
              showPoint: false,
              fullWidth: true,
              low: 0,
              high: 100,
              axisX: {
                  showGrid: false
              },
              axisY: {
                  showGrid: false
              },
              lineSmooth: false,
          };

          new Chartist.Line("#memory-usage-chart", memory_usage, options);
      })