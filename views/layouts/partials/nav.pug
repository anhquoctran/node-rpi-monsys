nav.navbar.navbar-default.navbar-fixed-top
  .brand
    a(href='/')
      img.img-responsive.logo(src='../public/images/RPiMonSysDarkLogo.png', alt='RPiMonSys Logo')
  .container-fluid
    .navbar-btn
      button.btn-toggle-fullwidth(type='button')
        i.lnr.lnr-menu
    #navbar-menu
      ul.nav.navbar-nav.navbar-right
        li.dropdown
          a.dropdown-toggle.icon-menu(href='#', data-toggle='dropdown')
            i.lnr.lnr-alarm
          ul.dropdown-menu.notifications#notification-panel
            if notification.length > 0
              each item in notification
                if item.IsRead == 0
                  li
                    a.notification-item(href='/account/notification/' + item.ID)
                      span.dot.bg-info 
                      | #{item.Content}
                else
                  li
                    a.notification-item.unread(href='/account/notification/' + item.ID)
                      span.dot.bg-info 
                      | #{item.Content}
            else
              li
                a.notification-item
                | There are no notifications

        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            if user.AvatarPath
              img.img-circle(src='#{user.AvatarPath}', alt='Avatar')
            else
              img.img-circle(src='../../../public/images/nullAvatar.png', alt='Avatar')
            | &nbsp;
            span= user.Fullname
              | &nbsp;
              i.icon-submenu.lnr.lnr-chevron-down
          ul.dropdown-menu
            li
              a(href='/account/' + user.Username)
                i.lnr.lnr-user
                span My Profile
            if user.Role == 'Admin'
              li
                a(href='/admin/admin_cp')
                  i.lnr.lnr-home
                  span AdminCP
            else
              li(display='none')
                a(href='/admin/admin_cp')
                  i.lnr.lnr-home
                  span AdminCP
            li
              a(href='#', data-toggle="modal" data-keyboard="false" data-backdrop="static" data-target="#myModal")
                i.lnr.lnr-cog
                span Preferences
            li
              a(href='/logout')
                i.lnr.lnr-exit
                span Logout
  #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h4#myModalLabel.modal-title Preferences
        .modal-body
          .row
            .col-md-9
              h4.heading
                b Notifications
              label.fancy-checkbox
                input#chkNotification(type='checkbox')
                span Allows push notification
            .col-md-4
              h4.heading
                b Languages
              select.form-control
                option(value='en') English
                option(value='vn') Tiếng Việt
        .modal-footer
          button.btn.btn-default(type='button', data-dismiss='modal') Cancel
          button#btnSaveChanges.btn.btn-primary(type='button') Save changes