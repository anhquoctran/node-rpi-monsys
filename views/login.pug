doctype html
html.fullscreen-bg(lang='en')
    head
        title Login to system
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet', href='../public/vendor/linearicons/style.css')
        link(rel='stylesheet', href='../public/stylesheets/main.css')
        link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700', rel='stylesheet')
        link(rel='apple-touch-icon', sizes='76x76', href='../public/images/apple-icon.png')
        link(rel='icon', type='image/png', sizes='96x96', href='../public/images/raspi-logo.png')
    body
    #wrapper
    .vertical-align-wrap
        .vertical-align-middle
        .auth-box
            .left
            .content
                .header
                .logo.text-center
                    h3 Raspberry Pi Monitor System
                p.lead Login to your account
                form.form-auth-small(action='index.php')
                .form-group
                    label.control-label.sr-only(for='signin-email') Email
                    |  
                    input#signin-email.form-control(type='email', value='', placeholder='Email')
                .form-group
                    label.control-label.sr-only(for='signin-password') Password
                    |  
                    input#signin-password.form-control(type='password', placeholder='Password')
                .form-group.clearfix
                    label.fancy-checkbox.element-left
                    input(type='checkbox')
                    |  
                    span Remember me
                |  
                button.btn.btn-primary.btn-lg.btn-block(type='submit') LOGIN
                .bottom
                    span.helper-text
                    i.fa.fa-lock
                    |  
                    a(href='#') Forgot password?
            .right
            .overlay
            .content.text
                h1.heading A simple management system for Raspberry Pi
                p simple, fast and strong
            .clearfix